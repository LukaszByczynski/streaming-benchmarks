#!/usr/bin/env ruby

def exec(cmd)
  puts cmd
  abort("Error encountered, aborting") unless system(cmd)
end

unless ARGV[0]
    $stderr.puts "ERROR: Benchmark name missing!"
    puts
    puts "Example: run-benchmark HelloWorldBenchmark"
    exit 1
end

Dir.chdir(File.dirname(__FILE__))

name = ARGV[0]
date = Time.now.strftime("%Y-%m-%d")

exec("mkdir -p results/#{date}")
exec("sbt clean 'jmh:run -o ./results/#{date}/#{name}.txt  -i 10 -wi 10 -f 2 -t 1 streaming.benchmarks.#{name}'")

